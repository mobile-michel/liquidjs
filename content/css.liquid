  --secondary-color: hsl(var(--hue), 50%, 30%);
  --max-width: {{ tokens.max-width }};
  --spacing: {{ tokens.spacing }};
  --grey100: #f8f9fa;
  --grey200: #e9ecef;
  --grey300: #dee2e6;
  --grey400: #ced4da;
  --grey500: #adb5bd;
  --grey600: #868e96;
  --grey700: #495057;
  --grey800: #343a40;
  --grey900: #212529;
  --text-font-size: {{ tokens.text-font-size }};
}

